@page


@{
}

<!DOCTYPE html>
<html>
<head>
    <link rel="authorization_endpoint" href="@ViewBag.auth_endpoint">
    <link rel="token_endpoint" href="@ViewBag.token_endpoint">
    <link rel="micropub" href="@Url.Action("Publish", "Micropub")">
</head>
<body>
    <form method="POST" action="/syndication/register/details">
        <input type="hidden" name="id" value="@ViewBag.id" />
        <p>
            <label for="name">Account Name</label><br />
            <input name="name" />
        </p>
        @if (ViewBag.showInstance == true)
        {
            <p>
                <label for="instance">Instance Name</label><br />
                <input name="instance" />
            </p>
        }
        @if (ViewBag.showCredentials == true)
        {

            <p>
                <label for="identity">Identity</label><br />
                <input name="identity" />
            </p>
        }
        @if (ViewBag.showCredentials == true || ViewBag.showBearerToken == true)
        {
            <p>
                <label for="secret">Secret</label><br />
                <input name="secret" type="password" />
            </p>
        }

        <input type="submit" value="update" />
    </form>
</body>
</html>